@model Ecomm_practice01.Model.Category
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id!=0?"Edit category":"Add Category";
    var saveupdate = Model.Id!=0?"Update":"Save";
}

<form method="post">
    <div class="row">
        <div class="col-10 border border-bottom-0">
            <h2 class="text-bg-info">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="col-8">
            <div class="form-group row m-2 p-2">
                <div class="col-4">
                    <label asp-for="Name" class="text-black-50"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Name" class="form-control" placeholder="Input Category Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row m-2 p-2 ">
                <div class="col-8 offset-4">
                    @if (Model.Id!=0)
                    {
                        <partial name="_EditBacktolist" />
                    }
                    else
                    {
                        <partial name="_CreateBacktolist" />
                    }
                </div>
            </div>
            @*<div class="form-group row m-2 p-2 ">
                <div class="col-4 offset-4">
                    <button class=" btn btn-success form-control" type="submit" >
                        @saveupdate
                    </button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-dark form-control">Back To List</a>
                </div>
            </div>*@
        </div>
    </div>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial"/>
  
}